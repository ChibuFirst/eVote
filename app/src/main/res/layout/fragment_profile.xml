<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/nominee_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/pp" />

    <TextView
        android:id="@+id/nominee_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/john_doe"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="#B3D8E8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nominee_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/president"
        android:textColor="#81D1EB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/demo_bio_text"
        android:textAlignment="center"
        android:textColor="@color/white" />

</LinearLayout>